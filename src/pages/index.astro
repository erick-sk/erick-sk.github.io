---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.svelte';
import Divider from '../components/Divider.svelte';
import SocialNetwork from '../components/SocialNetwork.svelte';
import Articles from '../components/Articles.svelte';
import Works from '../components/Works.svelte';
import DowlaodCV from '../components/DowloadCV.svelte';

const response = await fetch('https://dev.to/api/articles/me', {
  headers: {
    'api-key': import.meta.env.DEV_API_KEY,
  },
});
const articles = await response.json();
---

<Layout title='Erick Saavedra' description='Website about Erick Saavedra'>
  <main>
    <SectionContainer className='pt-32 flex justify-between'>
      <div>
        <h1 class='text-6xl font-black'>Hi, I'm Erick Saavedra!</h1>

        <p class='py-8'>
          Software Developer with JavaScript and Ruby experience
        </p>

        <nav class='flex gap-x-4'>
          <SocialNetwork />
        </nav>
      </div>

      <img
        class='rounded-full size-56 mb-4 hidden lg:block'
        src='/me.png'
        alt='Erick Saavedra'
      />
    </SectionContainer>

    <Divider styles='lg:w-[1024px]' />

    <SectionContainer
      className='pt-10 pb-24 grid grid-cols-1 lg:grid-cols-3 lg:gap-20'
    >
      <div class='lg:col-span-2'>
        <h2 class='text-2xl font-bold text-slate-600 mb-4'>Recent posts</h2>

        <div class='flex flex-col gap-y-4'>
          <Articles {articles} client:load />
        </div>
      </div>

      <Divider styles='w-full col-span-3 lg:hidden' />

      <div
        class='h-[400px] flex flex-col gap-y-5 p-6 rounded-2xl col-span-3 lg:col-span-1 lg:border-2'
      >
        <h2 class='text-2xl font-bold text-slate-600'>Work</h2>

        <Works />

        <DowlaodCV />
      </div>
    </SectionContainer>
  </main>
</Layout>
